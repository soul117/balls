<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.RecordsActivity">


    <TableLayout
        android:id="@+id/table_layout_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6FCCC6"
        android:padding="50dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:id="@+id/table_layout_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:layout_span="2"
                android:text="Results"
                android:textColor="#ffffff"
                android:textSize="30sp" />

        </TableRow>

        <View
            android:layout_height="5dp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="50dp" />

    </TableLayout>

    <ImageView
        android:id="@+id/btn_onBackPress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/back_to"
        android:contentDescription="Return back"
        app:layout_constraintStart_toEndOf="@+id/table_layout_table"
        app:layout_constraintStart_toStartOf="@+id/table_layout_table"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>